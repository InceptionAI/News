{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ESNext",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "sourceMap": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "checkJs": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": ["node"]
  },
  "compileOnSave": true,
  "exclude": ["node_modules", "../legacy", "dist"]
}
